<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodel="clr-namespace:PlutoWallet.ViewModel" xmlns:networkselect="clr-namespace:PlutoWallet.Components.NetworkSelect"
             x:Class="PlutoWallet.View.CustomCallPage"
             Title="Custom Call">

    <VerticalStackLayout>
        <networkselect:NetworkSelectView
            />

        <Picker
            Title="Pallet"
            ItemsSource="{Binding Pallets}"
            ItemDisplayBinding="{Binding Name}"
            SelectedItem="{Binding SelectedPallet}"/>
        <Label 
            Text="{Binding Loading}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding CallIndex}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding SelectedNetworkLabel}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Picker
            Title="Call"
            ItemsSource="{Binding CallsList}"
            ItemDisplayBinding="{Binding Name}"
            SelectedItem="{Binding SelectedCall}"/>

        <Entry Placeholder="Args" Text="{Binding Password}" Margin="20" />

        <Button Text="Submit" IsEnabled="{Binding IsSubmitEnabled}"
                Clicked="SubmitClicked"/>
    </VerticalStackLayout>
</ContentPage>
