<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoWallet.View.RegisterBiometricsPage"
             Title="RegisterBiometricsPage">
    <VerticalStackLayout Spacing="10">
        <Label 
            Text="Using biometric verification is safer and more convenient."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Use biometric verification"
                Clicked="OnUseBiometricsClicked" />

        <Button Text="Continue without biometrics" BackgroundColor="DarkRed"
                Clicked="OnRejectClicked" />
    </VerticalStackLayout>
</ContentPage>
