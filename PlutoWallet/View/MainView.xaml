<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:addressview="clr-namespace:PlutoWallet.Components.AddressView"
             xmlns:calamar="clr-namespace:PlutoWallet.Components.CalamarView"
             xmlns:balance="clr-namespace:PlutoWallet.Components.Balance"
             xmlns:dappconnectionview="clr-namespace:PlutoWallet.Components.DAppConnectionView"
             xmlns:staking="clr-namespace:PlutoWallet.Components.Staking"
             xmlns:extrinsic="clr-namespace:PlutoWallet.Components.Extrinsic"
             x:Class="PlutoWallet.View.MainView">
    <ScrollView
            AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All">

            <VerticalStackLayout
                Spacing="15"
                Padding="30,0">

                <BoxView Opacity="0"
                         HeightRequest="50" />

                <dappconnectionview:DAppConnectionView />

                <balance:BalanceDashboardView />

                <addressview:AddressView
                    Title="Public key"
                    Address="{Binding PublicKey}"/>

                <addressview:AddressView
                    Title="Substrate key"
                    Address="{Binding SubstrateKey}"/>

                <addressview:ChainAddressView />

                <extrinsic:ExtrinsicStatusView
                    ExtrinsicId="0015001148-000001-0e737"
                    Status="Pending" />
                <extrinsic:ExtrinsicStatusView
                    ExtrinsicId="0015001148-000001-0e736"
                    Status="Success" />
                <extrinsic:ExtrinsicStatusView
                    ExtrinsicId="0015001148-000001-0e735"
                    Status="Failed" />

                <staking:StakingDashboardView />

               <calamar:CalamarView Address="{Binding PublicKey}"/>

                <!-- Just a clear space (needs to be here) -->
                <AbsoluteLayout HeightRequest="200" WidthRequest="1000"/>
            </VerticalStackLayout>
        </ScrollView>
</ContentView>

