<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoWallet.Components.AddressView.AddressView" HeightRequest="30">
    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
           BorderColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
           CornerRadius="15"
           Padding="10, 0, 10, 0"
           Margin="0">

        <HorizontalStackLayout HorizontalOptions="FillAndExpand">

        <Label 
            x:Name="titleLabel"
            VerticalOptions="Center" 
            HorizontalOptions="StartAndExpand"
            MinimumWidthRequest="100"/>
       <Label 
            x:Name="addressLabel"
            VerticalOptions="Center" 
            HorizontalOptions="Fill" />
        </HorizontalStackLayout>
        <ContentView.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapped"/>

        </ContentView.GestureRecognizers>
    </Frame>
    
</ContentView>

