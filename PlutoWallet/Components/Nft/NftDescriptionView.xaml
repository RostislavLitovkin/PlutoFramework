<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:card="clr-namespace:PlutoWallet.Components.Card"
             x:Class="PlutoWallet.Components.Nft.NftDescriptionView"
             >
   <card:Card>
        <card:Card.View>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>

                <Label x:Name="descriptionTitleLabel"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Start"
                       Grid.Row="0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span FontAttributes="Bold"
                                    Text="Description"
                                    TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                        </FormattedString>

                    </Label.FormattedText>
                </Label>

                <Label TextType="Html" x:Name="descriptionLabel" TextColor="{AppThemeBinding Light=Black, Dark=White}"
                       Grid.Row="1"/>
                

            </Grid>
                    
        </card:Card.View>
    </card:Card>
</ContentView>

