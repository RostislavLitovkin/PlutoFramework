<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:balance="clr-namespace:PlutoWallet.Components.Balance"
             x:Class="PlutoWallet.Components.Balance.UsdBalanceView"
             HeightRequest="{Binding HeightRequest}">
    <StackLayout x:Name="stackLayout" MinimumHeightRequest="60"
                 Spacing="10">
        <Label Text="{Binding UsdSum}"
                FontAttributes="Bold"
                FontSize="24"
                HeightRequest="60"
                HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

        <CollectionView 
                        ItemsSource="{Binding Assets}"
                        >
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                   ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <balance:AssetAmountView Amount="{Binding Amount}"
                                             Symbol="{Binding Symbol}"
                                             ChainIcon="{Binding ChainIcon}"
                                             UsdValue="{Binding UsdValue}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentView>

