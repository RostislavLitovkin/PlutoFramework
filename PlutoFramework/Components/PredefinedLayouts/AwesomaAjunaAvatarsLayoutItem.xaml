<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:card="clr-namespace:PlutoFramework.Components.Card"
             xmlns:viewmodel="clr-namespace:PlutoFramework.Components.PredefinedLayouts"
             x:Class="PlutoFramework.Components.PredefinedLayouts.AwesomaAjunaAvatarsLayoutItem"
             HeightRequest="60">
    <card:ClickableCard Color="#151411">
        <card:ClickableCard.View>
            <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                            AbsoluteLayout.LayoutFlags="All"
                            Margin="0, 10, 0, 10">
                <VerticalStackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                                     AbsoluteLayout.LayoutFlags="SizeProportional">
                    <HorizontalStackLayout>
                        <Label 
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            VerticalTextAlignment="End"
                            TextColor="#f3e4d7">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span FontAttributes="Bold" Text="Awesome Ajuna Avatars" />

                                </FormattedString>

                            </Label.FormattedText>

                        </Label>
                        <Image Source="infowhite.png" 
                                   VerticalOptions="Center"
                                   Margin="5, 0, 0, 0"
                                   HeightRequest="15" WidthRequest="15"/>
                    </HorizontalStackLayout>
                
                </VerticalStackLayout>

                <Image AbsoluteLayout.LayoutBounds="1, 0.5, 100, 60"
                             AbsoluteLayout.LayoutFlags="PositionProportional"
                             Aspect="AspectFit"
                             Source="aaabackground.png"
                             />
                <AbsoluteLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                                AbsoluteLayout.LayoutFlags="All">

                    <AbsoluteLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnClicked" />

                    </AbsoluteLayout.GestureRecognizers>
                </AbsoluteLayout>
                
            </AbsoluteLayout>
        </card:ClickableCard.View>
    </card:ClickableCard>
</ContentView>

