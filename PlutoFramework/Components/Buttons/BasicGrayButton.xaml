<?xml version="1.0" encoding="utf-8" ?>
<Button xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoFramework.Components.Buttons.BasicGrayButton"
        BackgroundColor="{StaticResource GrayButtonBackground}"
        TextColor="{StaticResource GrayButtonText}"
        BorderColor="{StaticResource GrayButtonBorder}"
        BorderWidth="{StaticResource GrayButtonBorderWidth}"
        FontAttributes="Bold"
        FontFamily="{StaticResource ButtonFontFamily}"
        CornerRadius="{StaticResource ButtonCornerRadius}"
        HeightRequest="{StaticResource ButtonHeight}">
</Button>
