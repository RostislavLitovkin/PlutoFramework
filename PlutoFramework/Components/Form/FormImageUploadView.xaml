<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:card="clr-namespace:PlutoFramework.Components.Card"
             x:Class="PlutoFramework.Components.Form.FormImageUploadView">
    <card:ClickableCard CardPadding="0">
        <card:ClickableCard.View>
            <Grid HeightRequest="230">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <Label Grid.ColumnSpan="2"
                       Grid.Column="0"
                       Grid.Row="0"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Start"
                       Margin="5">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span FontAttributes="Bold"
                                  x:Name="titleSpan"/>

                        </FormattedString>

                    </Label.FormattedText>

                </Label>

                <Image x:Name="image"
                       Grid.Column="0"
                       Grid.Row="1"
                       Grid.ColumnSpan="2"
                       Aspect="AspectFill"/>
                
                <Image Grid.Column="0"
                       Grid.Row="1"
                       Margin="60">
                    <Image.Source>
                        <FontImageSource Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                         Glyph="&#xf030;"
                                         FontFamily="FontAwesome"
                                         Size="40" />
                    </Image.Source>

                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCaptureTapped" />
                    </Image.GestureRecognizers>
                </Image>

                <Image Grid.Column="1"
                       Grid.Row="1"
                        Margin="65">
                    <Image.Source>
                        <FontImageSource Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                         Glyph="&#xf1c5;"
                                         FontFamily="FontAwesome"
                                         Size="40" />
                    </Image.Source>
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSelectTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </card:ClickableCard.View>
    </card:ClickableCard>
</ContentView>
