<?xml version="1.0" encoding="utf-8" ?>
<page:PageTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   x:Class="PlutoFramework.Components.Keys.CreateNewKeyPage"
                   xmlns:keys="clr-namespace:PlutoFramework.Components.Keys"
                   xmlns:page="clr-namespace:PlutoFramework.Templates.PageTemplate"
                   Title="Generate new key">
    <ScrollView AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                AbsoluteLayout.LayoutFlags="All">

        <VerticalStackLayout Spacing="15" Margin="20, 20, 20, 100">

            <keys:NewKeyView KeyType="Sr25519" />

            <keys:NewKeyView KeyType="PolkadotJson" />

            <keys:NewKeyView KeyType="Did" />

            <keys:NewKeyView KeyType="EncryptionX25519" />

        </VerticalStackLayout>
    </ScrollView>
</page:PageTemplate>