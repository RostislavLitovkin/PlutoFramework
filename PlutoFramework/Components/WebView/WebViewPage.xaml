<?xml version="1.0" encoding="utf-8" ?>
<template:PageTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:template="clr-namespace:PlutoFramework.Templates.PageTemplate"
                       xmlns:navigationbar="clr-namespace:PlutoFramework.Components.NavigationBar"
                       x:Class="PlutoFramework.Components.WebView.WebViewPage"
                       Title="WebViewPage"
                       x:Name="page">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WebView WidthRequest="{Binding Source={x:Reference page}, Path=Width}"
                 BackgroundColor="White"
                 x:Name="webView" />
    </Grid>
</template:PageTemplate>
