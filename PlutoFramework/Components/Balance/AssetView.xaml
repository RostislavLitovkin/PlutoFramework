<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:card="clr-namespace:PlutoFramework.Components.Card"
             x:Class="PlutoFramework.Components.Balance.AssetView">
    <card:ClickableCard CardPadding="0, 0, 0, 0"
                    x:Name="card">
        <card:ClickableCard.View>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>

                <Border Margin="10"
                        Padding="0"
                        HeightRequest="50"
                        WidthRequest="50"
                        Grid.Column="0"
                        StrokeThickness="0"
                        BackgroundColor="Transparent">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="30" />
                    </Border.StrokeShape>

                    <AbsoluteLayout>

                        <Image x:Name="assetIcon"
                                Aspect="AspectFill"
                                IsAnimationPlaying="True"
                                HeightRequest="50"
                                WidthRequest="50"
                                AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All"
                               />
                    </AbsoluteLayout>
                </Border>

                <AbsoluteLayout HeightRequest="60"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            x:Name="infoLayout">
                    <HorizontalStackLayout AbsoluteLayout.LayoutBounds="0.5, 0, 1, 30"
                                            AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
                                           HorizontalOptions="Start">
                        <Label Padding="5, 0, 0, 0"
                          AbsoluteLayout.LayoutBounds="0.5, 0, 1, 30"
                          AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                           LineBreakMode="TailTruncation"
                           VerticalTextAlignment="Center"
                           FontSize="16">

                            <Label.FormattedText>
                                <FormattedString>
                                    <Span FontAttributes="Bold"
                                      x:Name="symbolLabelText" />

                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Image 
                           x:Name="lockImage"
                           HorizontalOptions="Start" VerticalOptions="Center"
                           HeightRequest="15" WidthRequest="15"
                           IsVisible="False"
                            Margin="10, 0, 0, 0">
                            <Image.Source>
                                <FontImageSource Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                                 Glyph="&#xf023;"
                                                 FontFamily="FontAwesome"
                                                 Size="15" />
                            </Image.Source>
                        </Image>
                        <Image
                           IsVisible="False"
                           x:Name="frozenImage"
                           HorizontalOptions="Start" VerticalOptions="Center"
                           HeightRequest="15" WidthRequest="15"
                            Margin="10, 0, 0, 0">
                            <Image.Source>
                                <FontImageSource Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                                 Glyph="&#xf2dc;"
                                                 FontFamily="FontAwesome"
                                                 Size="15" />
                            </Image.Source>
                        </Image>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout AbsoluteLayout.LayoutBounds="0.5, 30, 1, 30"
                                           AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
                                           HorizontalOptions="Start">

                    </HorizontalStackLayout>
                </AbsoluteLayout>

                <AbsoluteLayout HeightRequest="60"
                         Grid.Column="2">
                    <Label
                       HorizontalTextAlignment="End"
                       VerticalTextAlignment="Center"
                       FontAttributes="Bold"
                       AbsoluteLayout.LayoutBounds="0,0,110,30">    
                        <Label.FormattedText>
                            <FormattedString>
                                <Span x:Name="amountLabelText"
                                    FontAttributes="Bold" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label 
                           HorizontalTextAlignment="End"
                           VerticalTextAlignment="Center"
                           TextColor="#888888"
                           FontAttributes="Bold"
                           AbsoluteLayout.LayoutBounds="0,30,110,30">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span x:Name="usdLabel"
                                      FontAttributes="Bold" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </AbsoluteLayout>

            </Grid>

        </card:ClickableCard.View>
    </card:ClickableCard>
</ContentView>
