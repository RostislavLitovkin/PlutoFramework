<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoFramework.Components.XCavate.CompanyUserStatusBadgeView">
    <HorizontalStackLayout Spacing="0" HeightRequest="20">
        <Border Padding="0"
            StrokeThickness="0"
            x:Name="border"
            BackgroundColor="#88888888">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />

            </Border.StrokeShape>

            <AbsoluteLayout >
                <Label
                x:Name="roleLabel"
                AbsoluteLayout.LayoutBounds="0.5, .5, autosize, autosize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Margin="10, 5, 10, 5"
                Text="None"
                TextColor="White"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                FontSize="10"/>
            </AbsoluteLayout>
        </Border>
    </HorizontalStackLayout>
</ContentView>
