<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xcavate="clr-namespace:PlutoFramework.Components.Xcavate"
             x:Class="PlutoFramework.Components.Menu.UserView"
             >
    <xcavate:PageBottomBarView Shadow=""
                               Padding="20">
        <xcavate:PageBottomBarView.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </xcavate:PageBottomBarView.ColumnDefinitions>

        <VerticalStackLayout Spacing="5">
            <Label HorizontalOptions="Start"
                   HorizontalTextAlignment="Start"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                   FontSize="16"
                   >
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding FullName}"
                      FontAttributes="Bold" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label HorizontalOptions="Start"
           HorizontalTextAlignment="Start"
           TextColor="#804E4E4E"
           FontSize="10"
       >
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding Address}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <HorizontalStackLayout Spacing="10">
                <xcavate:UserTypeBadgeView UserRole="{Binding UserRole}" />

                <xcavate:VerificationBadgeView Value="{Binding Verification}" />

            </HorizontalStackLayout>
        </VerticalStackLayout>

        <Image VerticalOptions="Center"
               HorizontalOptions="Center"
               HeightRequest="30"
               Source="arrowrightgray.png"
               Grid.Column="1"/>

        <xcavate:PageBottomBarView.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding OpenUserCommand}" />
        </xcavate:PageBottomBarView.GestureRecognizers>
    </xcavate:PageBottomBarView>
    
</ContentView>
