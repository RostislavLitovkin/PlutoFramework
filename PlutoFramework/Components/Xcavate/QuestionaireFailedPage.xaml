<?xml version="1.0" encoding="utf-8" ?>
<page:PageTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:page="clr-namespace:PlutoFramework.Templates.PageTemplate"
             x:Class="PlutoFramework.Components.Xcavate.QuestionaireFailedPage"
             Title="Questionaire not passed">
    <VerticalStackLayout>
        <Label HorizontalOptions="Center"
           HorizontalTextAlignment="Center"
           LineBreakMode="WordWrap"
           Margin="30, 50, 30, 10"
           FontSize="20">
            <Label.FormattedText>
                <FormattedString>
                    <Span FontAttributes="Bold"
              Text="{Binding Text}"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </VerticalStackLayout>
</page:PageTemplate>