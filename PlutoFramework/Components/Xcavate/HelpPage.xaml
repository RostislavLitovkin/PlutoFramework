<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoFramework.Components.Xcavate.HelpPage"
             xmlns:xcavate="clr-namespace:PlutoFramework.Components.Xcavate"
             Title="HelpPage"
             Shell.PresentationMode="ModalNotAnimated"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#0a0a0a}">
    <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All">
        <VerticalStackLayout  AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1"
                              AbsoluteLayout.LayoutFlags="All">
            <Label 
            Text="Help page"
                FontSize="30"
                Margin="50"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        </VerticalStackLayout>
        
        <xcavate:XcavateNavigationBarView />
    </AbsoluteLayout>
</ContentPage>