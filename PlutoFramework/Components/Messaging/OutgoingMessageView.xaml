<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoFramework.Components.Messaging.OutgoingMessageView">
    <Grid ColumnDefinitions="*,3*">
        <Border Grid.Column="1"
                StrokeThickness="0"
                Padding="10"
                HorizontalOptions="End"
                VerticalOptions="Start"
                BackgroundColor="{StaticResource LightGrayBackground}"
                StrokeShape="RoundRectangle 4,4">
            <VerticalStackLayout Spacing="8">
                <Label Text="{Binding Text}"
                       LineBreakMode="WordWrap"/>
                
                <Label LineBreakMode="NoWrap"
                       FontSize="11"
                       TextColor="{StaticResource LightGrayText}"
                       HorizontalOptions="End">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Sent "/>
                            <Span Text="{Binding Timestamp}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentView>