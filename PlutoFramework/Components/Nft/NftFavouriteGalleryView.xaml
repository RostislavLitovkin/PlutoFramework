<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoFramework.Components.Nft.NftFavouriteGalleryView"
             xmlns:nft="clr-namespace:PlutoFramework.Components.Nft">
    <nft:NftGalleryView PlusIsVisible="True"
                        LoadingIsVisible="{Binding LoadingFavouriteNfts}"
                        Nfts="{Binding FavouriteNfts}"
                        ErrorIsVisible="False"
                        NoNftsIsVisible="{Binding NoFavouriteNfts}"
                        NoNftsText="No favourite NFTs"
                        PlusCommand="{Binding NavigateToNftOwnedPageCommand}"
    />
</ContentView>
