<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoFramework.Components.Nft.NftMultiImageView"
             xmlns:nft="clr-namespace:PlutoFramework.Components.Nft">
    <VerticalStackLayout Spacing="10">
        <nft:NftImageView ImageSource="{Binding MainImageSource}" />

        <HorizontalStackLayout Spacing="10"
                               BindableLayout.ItemsSource="{Binding ImageSources}">
            <BindableLayout.ItemTemplate>
                <DataTemplate >
                    <nft:NftImageView ExtraButtonsVisible="False"
                                      HeightRequest="60"
                                      WidthRequest="60"
                                      ImageSource="{Binding .}">
                        <nft:NftImageView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImageClicked" />
                        </nft:NftImageView.GestureRecognizers>
                    </nft:NftImageView>
                    
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
