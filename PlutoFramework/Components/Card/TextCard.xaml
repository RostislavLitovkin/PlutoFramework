<?xml version="1.0" encoding="utf-8" ?>
<card:Card xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:card="clr-namespace:PlutoFramework.Components.Card"
           x:Class="PlutoFramework.Components.Card.TextCard"
           BackgroundColor="{AppThemeBinding Light={StaticResource TextCardBackgroundColorLight}, Dark={StaticResource TextCardBackgroundColorDark}}"
           Shadow="{StaticResource TextCardShadow}"
           >
    <Label HorizontalOptions="Fill"
           x:Name="label"
           HorizontalTextAlignment="Start"
           VerticalTextAlignment="Start"
           LineBreakMode="WordWrap"
           Margin="0,10,0,10"
           />
</card:Card>
