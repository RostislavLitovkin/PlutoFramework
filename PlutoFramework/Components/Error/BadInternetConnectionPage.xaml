<?xml version="1.0" encoding="utf-8" ?>
<template:PageTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:template="clr-namespace:PlutoFramework.Templates.PageTemplate"
                       xmlns:card="clr-namespace:PlutoFramework.Components.Card"
                       xmlns:navigationbar="clr-namespace:PlutoFramework.Components.NavigationBar"
                       x:Class="PlutoFramework.Components.Error.BadInternetConnectionPage"
                       Title="Bad Internet Connection">
    <card:ClickableCard AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, AutoSize"
                        AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                        Margin="20">
        <card:ClickableCard.View>
            <Label TextColor="{StaticResource DangerousRed}"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"
                   Margin="20"
                   Text="Bad Internet Connection" />
        </card:ClickableCard.View>
    </card:ClickableCard>
</template:PageTemplate>