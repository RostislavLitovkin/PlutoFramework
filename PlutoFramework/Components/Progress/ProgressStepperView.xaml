<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoFramework.Components.Progress.ProgressStepperView">
    <HorizontalStackLayout BindableLayout.ItemsSource="{Binding Borders}"
                           Spacing="4"
                           HeightRequest="4"
                           x:Name="horizontalStackLayout">
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <Border WidthRequest="{Binding WidthRequest}"
                        BackgroundColor="{Binding BackgroundColor}"
                        HeightRequest="4"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="2" />
                    </Border.StrokeShape>
                </Border>

            </DataTemplate>

        </BindableLayout.ItemTemplate>

    </HorizontalStackLayout>
</ContentView>
