<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoFramework.Components.Notifications.NotificationTypeBadgeView">
    <Border Padding="0"
            HeightRequest="20"
            StrokeThickness="0"
            x:Name="border"
            BackgroundColor="#88888888">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="4" />

        </Border.StrokeShape>

        <AbsoluteLayout >
            <Label
                x:Name="label"
                AbsoluteLayout.LayoutBounds="0.5, .5, autosize, autosize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Margin="10, 5, 10, 5"
                Text="None"
                TextColor="#A6A6A6"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                FontSize="10"/>
        </AbsoluteLayout>
    </Border>
</ContentView>
