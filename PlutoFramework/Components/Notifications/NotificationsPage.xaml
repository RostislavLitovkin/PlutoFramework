<?xml version="1.0" encoding="utf-8" ?>
<page:PageTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:tabs="clr-namespace:PlutoFramework.Components.Tabs"
                   xmlns:notifications="clr-namespace:PlutoFramework.Components.Notifications"
             xmlns:page="clr-namespace:PlutoFramework.Templates.PageTemplate"
             x:Class="PlutoFramework.Components.Notifications.NotificationsPage"
             Title="Notifications">
    <VerticalStackLayout>
        <tabs:MultiTabView Margin="20, 10, 20, 10" />

        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Notifications}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <notifications:NotificationView />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </VerticalStackLayout>
</page:PageTemplate>