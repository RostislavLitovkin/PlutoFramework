<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:card="clr-namespace:PlutoFramework.Components.Card"
             x:Class="PlutoFramework.Components.AddressView.SubscanAddressView">
    <card:ClickableCard IsThin="True"
       AbsoluteLayout.LayoutBounds="0, .5, 1, 40"
       AbsoluteLayout.LayoutFlags="YProportional, WidthProportional">
        <card:ClickableCard.View>

            <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All"
                    x:Name="absoluteLayout">
                <Grid AbsoluteLayout.LayoutBounds="0, .5, 1, 40"
              AbsoluteLayout.LayoutFlags="YProportional, WidthProportional">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>

                    <Label
                            VerticalOptions="Center" 
                            HorizontalOptions="Start"
                            FontAttributes="Bold"
                        x:Name="titleLabel"
                        >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCopyTapped"/>

                        </Label.GestureRecognizers>
                    </Label>

                    <Label x:Name="addressLabel"
                       VerticalOptions="Center" 
                       HorizontalOptions="Fill"
                       Margin="10, 0, 0, 0"
                       Grid.Column="1"
                       LineBreakMode="TailTruncation"
                       TextColor="{AppThemeBinding Dark=#fdfdfd, Light=#0a0a0a}"
                       FontAttributes="Bold"
                       FontFamily="SourceCode">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCopyTapped"/>

                        </Label.GestureRecognizers>

                    </Label>

                    <Image WidthRequest="20"
                       Margin="5, 0, 0, 0"
                       VerticalOptions="Center" 
                       HorizontalOptions="End"
                       Grid.Column="2"
                       Source="subscanicon.png">

                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSubscanTapped"/>

                        </Image.GestureRecognizers>
                    </Image>

                </Grid>
            </AbsoluteLayout>
        </card:ClickableCard.View>

    </card:ClickableCard>
</ContentView>
