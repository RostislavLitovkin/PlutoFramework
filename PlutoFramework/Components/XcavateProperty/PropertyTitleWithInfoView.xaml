<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoFramework.Components.XcavateProperty.PropertyTitleWithInfoView">
    <HorizontalStackLayout Spacing="5">
        <Label FontAttributes="Bold"
       HorizontalTextAlignment="Start"
               VerticalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span x:Name="text"
                          FontAttributes="Bold" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Image WidthRequest="14"
               HeightRequest="14"
               Opacity=".5"
               VerticalOptions="Center"
               Source="{AppThemeBinding Light=infoblack.png, Dark=infowhite.png}"
               x:Name="infoImage" 
               IsVisible="False" />

        <HorizontalStackLayout.GestureRecognizers>
            <TapGestureRecognizer x:Name="tapGestureRecognizer" />
        </HorizontalStackLayout.GestureRecognizers>
    </HorizontalStackLayout>
</ContentView>
