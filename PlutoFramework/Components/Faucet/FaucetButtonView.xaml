<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:button="clr-namespace:PlutoFramework.Components.Buttons"
             x:Class="PlutoFramework.Components.Faucet.FaucetButtonView"
             IsVisible="{Binding IsVisible}"
             HeightRequest="60">
    <button:ElevatedButton Text="{Binding Text}" ButtonState="{Binding ButtonState}" Command="{Binding AirdropCommand}"/>
</ContentView>
